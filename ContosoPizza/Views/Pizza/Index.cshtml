@model ContosoPizza.Models.Pizza

@{
    ViewData["Title"] = "Pizza List";
}

<h2>List of pizzas</h2>
<ul id="pizza-list">
    @foreach (var pizzaModel in ViewData["PizzaList"] as List<ContosoPizza.Models.Pizza>)
    {
        <li>@Html.DisplayFor(model => pizzaModel.Name)</li>
    }
</ul>
<h2>Add a new pizza</h2>
<form> 
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input id="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsGlutenFree" class="control-label"></label>
        <input id="IsGlutenFree" type="checkbox" class="form-control" />
    </div>
    <input id="submit" type="button" value="Submit!" />
</form>